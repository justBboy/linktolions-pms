<%- include("../partials/dashboard-skeleton.ejs") %>
<div id="main-content">
        <div class="container-fluid">
            <div class="block-header">
                <div class="row clearfix">
                    <div class="col-md-6 col-sm-12">
                        <h2>Blog</h2>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Oculux</a></li>
                            <li class="breadcrumb-item"><a href="#">Blog</a></li>
                            <li class="breadcrumb-item active" aria-current="page">List</li>
                            </ol>
                        </nav>
                    </div>            
                    <div class="col-md-6 col-sm-12 text-right hidden-xs">
                        <a href="/blog/add" class="btn btn-sm btn-primary btn-round" title="">New Post</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row clearfix">
                <div class="col-lg-8 col-md-12">
                    <% for (const blog of blogs) { %>
                        <div class="single-blog">
                            <div class="post-thumb">
                                <a href="#"><img src="<%= blog.image.path %>" class="img-fluid rounded" alt=""></a>
                            </div>
                            <div class="post-content overflow">
                                <h2 class="post-title bold"><a href="#"><%= blog.title %></a></h2>
                                <h3 class="post-author"><a href="#">Posted by <%= blog.user.username %></a></h3>
                                <p><%= blog.body | trancate(45) %></p>
                                <a href="#" class="read-more">View More</a>
                                <div class="post-bottom overflow">
                                    <ul class="nav navbar-nav post-nav">
                                        <li><a href="#"><i class="fa fa-tag"></i><%= blog.category %></a></li>
                                        <li><a href="#"><i class="fa fa-heart"></i><%= blog.hearts %> Love</a></li>
                                        <li><a href="#"><i class="fa fa-comments"></i><%= blog.comments.length %> Comments</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    <% } %>
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            <% if(lastPageNumber > 1) { %>
                                <li class="page-item">
                                <a class="page-link" href="/blog?page=<%= pageNumber-1 %>" aria-label="Previous">
                                    <span aria-hidden="true">«</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                </li>
                                <li class="page-item <%= pageNumber == 1 ? 'active' : '' %>"><a class="page-link" href="/blog?page=1">1</a></li>
                                <li class="page-item <%= pageNumber == 2 ? 'active' : '' %>"><a class="page-link" href="/blog?page=2">2</a></li>
                                <% for(var i =pageNumber; i<pageNumber+4; i++) { %>
                                    <% if(i < lastPageNumber && i > 2) { %>
                                        <li class="page-item <%= pageNumber == i ? 'active' : '' %>"><a class="page-link" href="/blog?page=<%= i %>"><%= i %></a></li>
                                    <% } %>
                                <% } %>
                                <li class="page-item <%= pageNumber == lastPageNumber ? 'active' : '' %>"><a class="page-link" href="/blog?page=<%= lastPageNumber %>"><%= lastPageNumber %></a></li>
                                <% if (pageNumber < lastPageNumber) { %>
                                    <a class="page-link" href="/blog?page=<%= pageNumber+1 %>" aria-label="Next">
                                        <span aria-hidden="true">»</span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                <% } %>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-4 col-md-12">
                    <form class="card">
                        <div class="body">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Search...">
                            </div>
                            <div class="form-footer">
                                <button type="submit" class="btn btn-primary btn-block">Submit</button>
                            </div>
                        </div>
                    </form>
                    <div class="card">
                        <div class="header">
                            <h2>Archive</h2>
                        </div>
                        <div class="body">
                            <table class="table card-table mb-0">
                                <tbody>
                                    <tr>
                                        <td class="font-weight-bold"><a class="text-muted" href="#">November 2018</a></td>
                                        <td class="text-right">( 42 )</td>
                                    </tr>
                                    <tr>
                                        <td class="font-weight-bold"><a class="text-muted" href="#">December 2018</a></td>
                                        <td class="text-right">( 210 )</td>
                                    </tr>
                                    <tr>
                                        <td class="font-weight-bold"><a class="text-muted" href="#">January 2019</a></td>
                                        <td class="text-right">( 54 )</td>
                                    </tr>
                                    <tr>
                                        <td class="font-weight-bold"><a class="text-muted" href="#">February 2019</a></td>
                                        <td class="text-right">( 25 )</td>
                                    </tr>
                                    <tr>
                                        <td class="font-weight-bold"><a class="text-muted" href="#">March 2019</a></td>
                                        <td class="text-right">( 102 )</td>
                                    </tr>
                                    <tr>
                                        <td class="font-weight-bold"><a class="text-muted" href="#">April 2019</a></td>
                                        <td class="text-right">( 12 )</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>                    
                    <div class="card">
                        <div id="slider4" class="carousel slide" data-ride="carousel" data-interval="2000">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="card-img-top" src="../assets/images/image-gallery/10.jpg" alt="Card image cap">
                                </div>
                                <div class="carousel-item">
                                    <img class="card-img-top" src="../assets/images/image-gallery/11.jpg" alt="Card image cap">
                                </div>
                                <div class="carousel-item">
                                    <img class="card-img-top" src="../assets/images/image-gallery/12.jpg" alt="Card image cap">
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-center">
                            <div class="row clearfix">
                                <div class="col-6">
                                    <i class="fa fa-camera font-22"></i>
                                    <div><span class="text-muted">3 Photos</span></div>
                                </div>
                                <div class="col-6">
                                    <i class="fa fa-eye font-22"></i>
                                    <div><span class="text-muted">1k Views</span></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="header">
                            <h2>Tag Cloud</h2>
                        </div>
                        <div class="body">
                            <ul class="nav nav-pills tag_cloud">
                                <li class="nav-item"><a class="nav-link" href="#">Corporate</a></li>
                                <li class="nav-item"><a class="nav-link" href="#">Joomla</a></li>
                                <li class="nav-item"><a class="nav-link" href="#">Abstract</a></li>
                                <li class="nav-item"><a class="nav-link" href="#">Creative</a></li>
                                <li class="nav-item"><a class="nav-link" href="#">Business</a></li>
                                <li class="nav-item"><a class="nav-link" href="#">Product</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card">
                        <div class="header">
                            <h2>Latest Photos</h2>
                        </div>
                        <ul class="gallery list-unstyled">
                            <li><a href="#"><img src="../assets/images/image-gallery/1.jpg" class="img-fluid rounded" alt=""></a></li>
                            <li><a href="#"><img src="../assets/images/image-gallery/2.jpg" class="img-fluid rounded" alt=""></a></li>
                            <li><a href="#"><img src="../assets/images/image-gallery/3.jpg" class="img-fluid rounded" alt=""></a></li>
                            <li><a href="#"><img src="../assets/images/image-gallery/4.jpg" class="img-fluid rounded" alt=""></a></li>
                            <li><a href="#"><img src="../assets/images/image-gallery/5.jpg" class="img-fluid rounded" alt=""></a></li>
                            <li><a href="#"><img src="../assets/images/image-gallery/6.jpg" class="img-fluid rounded" alt=""></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>